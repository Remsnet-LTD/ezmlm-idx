# $Id$

if [ "$SECT" -le "5" ]; then

  prompt "ezmlm-manage (subscribe probe): "

  DEFAULT="subscribe"; export DEFAULT
  LOCAL="${LOC}-${DEFAULT}"; export LOCAL
  ${EZBIN}/ezmlm-manage "$DIR" <"$TMP" >"$ERR" 2>&1 || \
  { ${ECHO} "failed to produce subscribe probe"; exit 100; }

  grephdr_manage
  grephdr reply-to: "${LOC}-sc\\..*\\..*-test=example.org@${HOST}"
  grephdr subject: "CONFIRM subscribe to ${LOC}@${HOST}"
  grephdr_empty

  ${ECHO} OK

fi
