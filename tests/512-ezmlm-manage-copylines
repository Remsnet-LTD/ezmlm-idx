# $Id$

  prompt "copylines:            "

  DEFAULT="subscribe"
  LOCAL="${LOC}-${DEFAULT}"

  echo 0 >"$DIR"/copylines
  file_run ezmlm-manage -S "$DIR" || \
  fatal "failed to produce subscribe confirmation"
  grepbodynot 1
  grepbodynot 2

  echo 1 >"$DIR"/copylines
  file_run ezmlm-manage -S "$DIR" || \
  fatal "failed to produce subscribe confirmation"
  grepbody 1
  grepbodynot 2

  echo 2 >"$DIR"/copylines
  file_run ezmlm-manage -S "$DIR" || \
  fatal "failed to produce subscribe confirmation"
  grepbody 1
  grepbody 2

  ${ECHO} OK
