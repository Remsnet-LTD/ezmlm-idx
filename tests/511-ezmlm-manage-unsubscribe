# $Id$

  prompt "unsubscribe:          "

  DEFAULT="unsubscribe"; export DEFAULT
  LOCAL="${LOC}-${DEFAULT}"; export LOCAL
  ${EZBIN}/ezmlm-manage -U "$DIR" <"$TMP" >"$ERR" 2>&1 || \
  fatal "failed to produce unsubscribe confirmation"

  grephdr_manage
  grephdr subject: "goodbye from ${LOC}@${HOST}"
  grephdr_empty

  ${ECHO} OK
