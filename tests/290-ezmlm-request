# $Id$

#################
# ezmlm-request #
#################

if [ "$SECT" -le "2" ]; then

  prompt "ezmlm-request (2/2):  "

  ${GREP} "$LOC-qqqq-$SND=$HOST" "${REQ}" >/dev/null || \
	fatal "'qqqq' subject query rewriting failed"

  ${GREP} "$LOC-unsubscribe-$SND=$HOST" "${REQ}" >/dev/null || \
	fatal "ezmlm 'remove' subject query rewriting failed"

  ${ECHO} "OK"

fi
